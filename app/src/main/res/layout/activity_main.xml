<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryan.opengltutorials.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triangle"
        android:id="@+id/btnTriangles"
        android:onClick="startTriangleActivity"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intro to Lighting"
        android:id="@+id/btnIntroLighting"
        android:onClick="startIntroLightingActivity"
        android:layout_below="@+id/btnTriangles"
        android:layout_alignLeft="@+id/btnTriangles"
        android:layout_alignStart="@+id/btnTriangles" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing"
        android:id="@+id/btnTest"
        android:layout_below="@+id/btnIntroLighting"
        android:layout_alignLeft="@+id/btnIntroLighting"
        android:layout_alignStart="@+id/btnIntroLighting"
        android:onClick="startTestActivity" />

</RelativeLayout>
